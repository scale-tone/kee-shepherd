{
    "name": "key-shepherd-vscode",
    "displayName": "key-shepherd-vscode",
    "description": "Herds secrets, passwords, keys etc. on your devbox",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.62.0"
    },
    "categories": [
        "Other"
    ],
    "homepage": "https://github.com/scale-tone/key-shepherd",
    "repository": {
        "type": "git",
        "url": "https://github.com/scale-tone/key-shepherd"
    },
    "bugs": {
        "url": "https://github.com/scale-tone/key-shepherd/issues"
    },
    "icon": "logo.png",
    "keywords": [
        "secrets",
        "Azure"
    ],
    "publisher": "scale-tone",
    "license": "MIT",
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "key-shepherd-vscode.superviseSecret",
                "title": "KeyShepherd: Supervise this secret..."
            },
            {
                "command": "key-shepherd-vscode.controlSecret",
                "title": "KeyShepherd: Control this secret..."
            },
            {
                "command": "key-shepherd-vscode.insertSecret",
                "title": "KeyShepherd: Insert a secret here..."
            },
            {
                "command": "key-shepherd-vscode.disguiseSecrets",
                "title": "KeyShepherd: Disguise all controlled secrets in this project"
            },
            {
                "command": "key-shepherd-vscode.revealSecrets",
                "title": "KeyShepherd: Reveal all controlled secrets in this project"
            },
            {
                "command": "key-shepherd-vscode.hideSecrets",
                "title": "KeyShepherd: Hide secrets in this file"
            },
            {
                "command": "key-shepherd-vscode.showSecrets",
                "title": "KeyShepherd: Unhide secrets in this file"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "key-shepherd-vscode.superviseSecret",
                    "when": "editorHasSelection",
                    "group": "key-shepherd-vscode-group@1"
                },
                {
                    "command": "key-shepherd-vscode.controlSecret",
                    "when": "editorHasSelection",
                    "group": "key-shepherd-vscode-group@2"
                },
                {
                    "command": "key-shepherd-vscode.insertSecret",
                    "group": "key-shepherd-vscode-group@3"
                },
                {
                    "command": "key-shepherd-vscode.hideSecrets",
                    "group": "key-shepherd-vscode-group@4"
                },
                {
                    "command": "key-shepherd-vscode.showSecrets",
                    "group": "key-shepherd-vscode-group@5"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.62.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "ts-loader": "^9.2.5",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0",
        "@vscode/test-electron": "^1.6.2"
    },
    "extensionDependencies": [
        "ms-vscode.azure-account"
    ]
}